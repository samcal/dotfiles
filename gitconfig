[push]
  default = current
[color]
  ui = auto
[alias]
  aa = add --all
  ca = commit --amend
  co = !git switch $(git branch | grep -v '\\*' | fzf)
  del = !git branch -D $(git branch | grep -v '\\*\\|master' | fzf)
  last = log -1 HEAD
  open-remote = !sh -c 'git remote get-url ${1:-origin} | xargs -n 1 open' -
  pr = !gh pr view --web
  checks = !gh pr checks
[core]
  excludesfile = /Users/sam/.gitignore
  autocrlf = input
  pager = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  features = side-by-side line-numbers
  plus-color = "#012800"
  minus-color = "#340001"
[commit]
  template = ~/.gitmessage
  verbose = true
[blame]
  date = format-local:%a %D %k:%M
[diff]
  algorithm = histogram
[branch "master"]
  mergeoptions = --ff-only
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[user]
	name = Sam Calvert
	email = sam@outschool.com
[pull]
	ff = only
