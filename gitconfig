[push]
    default = current
[color]
    ui = auto
[alias]
    co = !git switch $(git branch | grep -v '\\*' | fzf --height=8 --layout=reverse)
    del = !git branch -D $(git branch | grep -v '\\*\\|master' | fzf --height=8 --layout=reverse)
	tidy = !git for-each-ref --format=\"%(if:equals=[gone])%(upstream:track)%(then)%(refname:short)%(end)\" refs/heads
[core]
    excludesfile = /Users/sam/.gitignore
    autocrlf = input
[commit]
    template = ~/.gitmessage
    verbose = true
[blame]
    date = format-local:%a %D %k:%M
[diff]
    algorithm = histogram
    external = difft
[branch "master"]
    mergeoptions = --ff-only
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[user]
	name = Sam Calvert
	email = sam@outschool.com
[pull]
	ff = only
[init]
	defaultBranch = main
